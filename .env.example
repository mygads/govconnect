# ==================== GOVCONNECT ENVIRONMENT ====================
# Copy this file to .env and fill in your values
# DO NOT commit .env to git!

# Environment
NODE_ENV=development

# ==================== PostgreSQL Database ====================
# Single database with different schemas per service
DATABASE_URL=postgresql://postgres:postgres_secret_2025@localhost:5432/govconnect

# Schema-specific connection strings for Prisma
DB_CHANNEL_URL=postgresql://postgres:postgres_secret_2025@localhost:5432/govconnect?schema=channel
DB_CASE_URL=postgresql://postgres:postgres_secret_2025@localhost:5432/govconnect?schema=cases
DB_NOTIFICATION_URL=postgresql://postgres:postgres_secret_2025@localhost:5432/govconnect?schema=notification
DB_DASHBOARD_URL=postgresql://postgres:postgres_secret_2025@localhost:5432/govconnect?schema=dashboard
DB_TEST_URL=postgresql://postgres:postgres_secret_2025@localhost:5432/govconnect?schema=testing

# Database credentials
DB_HOST=localhost
DB_PORT=5432
DB_NAME=govconnect
DB_USER=postgres
DB_PASSWORD=postgres_secret_2025

# ==================== RabbitMQ ====================
RABBITMQ_URL=amqp://admin:rabbitmq_secret_2025@localhost:5672/govconnect
RABBITMQ_MANAGEMENT_URL=http://localhost:15672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=rabbitmq_secret_2025

# ==================== Internal API Keys ====================
# Shared secret for inter-service authentication
# Generate with: openssl rand -base64 64
INTERNAL_API_KEY=govconnect_internal_secret_key_2025_change_in_production

# ==================== Service URLs (Local Development) ====================
CHANNEL_SERVICE_URL=http://localhost:3001
AI_SERVICE_URL=http://localhost:3002
CASE_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3004
DASHBOARD_URL=http://localhost:3000

# ==================== WhatsApp Provider (Phase 1) ====================
# Configure these in Phase 1
WA_API_URL=
WA_API_TOKEN=
WA_WEBHOOK_VERIFY_TOKEN=govconnect_verify_token
WA_WEBHOOK_SECRET=

# ==================== AI Provider (Phase 2) ====================
# Get key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=

# Alternative: OpenRouter (optional)
OPENROUTER_API_KEY=

# ==================== Dashboard JWT (Phase 5) ====================
# Generate with: openssl rand -base64 32
JWT_SECRET=
JWT_EXPIRES_IN=24h

# ==================== Logging ====================
LOG_LEVEL=debug
LOG_FORMAT=json

# ==================== Feature Flags ====================
ENABLE_RATE_LIMITING=true
ENABLE_METRICS=true
ENABLE_SWAGGER=true

# ==================== Timeouts ====================
HTTP_TIMEOUT=10000
RABBITMQ_RECONNECT_TIMEOUT=5000
DATABASE_QUERY_TIMEOUT=30000
