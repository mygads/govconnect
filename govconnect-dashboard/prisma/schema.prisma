generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model admin_users {
  id            String   @id @default(cuid())
  username      String   @unique
  password_hash String
  name          String
  role          String   @default("village_admin")
  is_active     Boolean  @default(true)
  village_id    String?
  created_at    DateTime @default(now())
  
  sessions      admin_sessions[]
  activity_logs activity_logs[]
  village       villages? @relation(fields: [village_id], references: [id])
}

model admin_sessions {
  id         String   @id @default(cuid())
  admin_id   String
  token      String   @unique
  expires_at DateTime
  created_at DateTime @default(now())
  
  admin      admin_users @relation(fields: [admin_id], references: [id], onDelete: Cascade)
  
  @@index([admin_id])
  @@index([expires_at])
}

model activity_logs {
  id         String   @id @default(cuid())
  admin_id   String
  action     String
  resource   String
  details    Json?
  ip_address String?
  timestamp  DateTime @default(now())
  
  admin      admin_users @relation(fields: [admin_id], references: [id], onDelete: Cascade)
  
  @@index([admin_id])
  @@index([timestamp])
}

// ==================== SYSTEM SETTINGS ====================

model system_settings {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String   @db.Text
  description String?
  updated_at  DateTime @updatedAt
  created_at  DateTime @default(now())
}

// ==================== AI GOLDEN SET ====================

model ai_golden_set_runs {
  id               String   @id @default(cuid())
  run_id           String   @unique
  total            Int
  intent_accuracy  Float
  keyword_accuracy Float
  overall_accuracy Float
  thresholds       Json
  status           Json
  started_at       DateTime
  completed_at     DateTime
  created_at       DateTime @default(now())

  items            ai_golden_set_items[]

  @@index([completed_at])
}

model ai_golden_set_items {
  id              String   @id @default(cuid())
  run_id          String
  query           String   @db.Text
  expected_intent String?
  predicted_intent String
  reply_text      String   @db.Text
  intent_match    Boolean?
  keyword_match   Boolean?
  keyword_score   Float?
  score           Float
  latency_ms      Int
  created_at      DateTime @default(now())

  run             ai_golden_set_runs @relation(fields: [run_id], references: [id], onDelete: Cascade)

  @@index([run_id])
}

// ==================== KNOWLEDGE BASE ====================
// Note: Embeddings are now stored in AI Service vector database
// Dashboard only stores metadata for admin management

model knowledge_base {
  id               String    @id @default(cuid())
  title            String
  content          String    @db.Text
  category         String    // "informasi_umum" | "layanan" | "prosedur" | "jadwal" | "kontak" | "faq"
  category_id      String?
  village_id       String?
  keywords         String[]  // Array of keywords for better search
  is_active        Boolean   @default(true)
  priority         Int       @default(0) // Higher priority = shown first
  admin_id         String?   // Who created/updated this
  last_edited_at   DateTime? // When content was last edited
  last_embedded_at DateTime? // When embedding was last generated
  updated_at       DateTime  @updatedAt
  created_at       DateTime  @default(now())

  category_ref knowledge_categories? @relation(fields: [category_id], references: [id])
  village      villages? @relation(fields: [village_id], references: [id])
  
  @@index([category])
  @@index([category_id])
  @@index([village_id])
  @@index([is_active])
  @@index([keywords])
}

// ==================== KNOWLEDGE DOCUMENTS ====================

model knowledge_documents {
  id              String   @id @default(cuid())
  filename        String   // Stored filename (sanitized)
  original_name   String   // Original upload filename
  mime_type       String   // application/pdf, text/plain, etc.
  file_size       Int      // File size in bytes
  file_url        String   // Storage URL (local or S3)
  village_id      String?
  category_id     String?
  
  // Processing status
  status          String   @default("pending") // pending, processing, completed, failed
  error_message   String?  @db.Text
  
  // Metadata
  title           String?  // Document title (extracted or provided)
  description     String?  @db.Text
  category        String?  // Document category for filtering
  
  // Processing info
  total_chunks    Int?     // Number of chunks after processing
  total_tokens    Int?     // Estimated token count
  
  // Relations
  admin_id        String?  // Who uploaded this
  chunks          document_chunks[]
  category_ref    knowledge_categories? @relation(fields: [category_id], references: [id])
  village         villages? @relation(fields: [village_id], references: [id])
  
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
  
  @@index([status])
  @@index([category])
  @@index([category_id])
  @@index([village_id])
  @@index([created_at])
}

// ==================== DOCUMENT CHUNKS ====================
// Note: Embeddings are now stored in AI Service vector database
// Dashboard only stores chunk metadata for reference

model document_chunks {
  id              String   @id @default(cuid())
  document_id     String
  chunk_index     Int      // Order in document (0-based)
  content         String   @db.Text
  
  // Metadata for context
  page_number     Int?     // Page number if from PDF
  section_title   String?  // Section/chapter title if available
  
  // Relations
  document        knowledge_documents @relation(fields: [document_id], references: [id], onDelete: Cascade)
  
  created_at      DateTime @default(now())
  
  @@index([document_id])
  @@index([chunk_index])
}

// ==================== VILLAGES ====================

model villages {
  id         String   @id @default(cuid())
  name       String
  slug       String   @unique
  is_active  Boolean  @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  profiles                 village_profiles[]
  admins                   admin_users[]
  knowledge_categories     knowledge_categories[]
  important_contact_categories important_contact_categories[]
  knowledge_base_items     knowledge_base[]
  knowledge_documents      knowledge_documents[]
}

model village_profiles {
  id              String   @id @default(cuid())
  village_id      String
  name            String
  address         String
  gmaps_url       String?
  short_name      String
  operating_hours Json
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  village         villages @relation(fields: [village_id], references: [id], onDelete: Cascade)

  @@index([village_id])
}

// ==================== KNOWLEDGE CATEGORIES ====================

model knowledge_categories {
  id         String   @id @default(cuid())
  village_id String
  name       String
  is_default Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  village    villages @relation(fields: [village_id], references: [id], onDelete: Cascade)
  documents  knowledge_documents[]
  knowledge_items knowledge_base[]

  @@index([village_id])
  @@index([name])
}

// ==================== IMPORTANT CONTACTS ====================

model important_contact_categories {
  id         String   @id @default(cuid())
  village_id String
  name       String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  village    villages @relation(fields: [village_id], references: [id], onDelete: Cascade)
  contacts   important_contacts[]

  @@index([village_id])
  @@index([name])
}

model important_contacts {
  id          String   @id @default(cuid())
  category_id String
  name        String
  phone       String
  description String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  category    important_contact_categories @relation(fields: [category_id], references: [id], onDelete: Cascade)

  @@index([category_id])
  @@index([phone])
}

// ==================== GENFITY WHATSAPP SESSIONS ====================

model genfity_whatsapp_sessions {
  id           String   @id @default(cuid())
  village_id   String   @unique // One session per village
  session_id   String   @unique // Genfity session ID
  session_name String
  token        String   // Session token for API calls
  status       String   @default("pending")
  connected    Boolean  @default(false)
  logged_in    Boolean  @default(false)
  jid          String?  // WhatsApp JID (user@s.whatsapp.net)
  qrcode       String?  @db.Text
  message      String?  @db.Text
  webhook      String?
  events       String?
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  @@index([village_id])
  @@index([session_id])
  @@index([connected])
}

